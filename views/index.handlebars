<h1>Burgers!</h1>
<h2>Burgers that are available to eat!</h2>
<ul>
 
  {{#each burgers}}
    {{#unless devoured}}
    <li>
       <div class="row">
        <div class="col-md-6">
          {{burger_name}}
        </div>
        <div class="col-md-4">
            {{> burgers/burger-block devour=true}}
        </div>
      </div>
      </li>
    {{/unless}}
  {{/each}}
</ul>


<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     <li>
       <div class="row">
        <div class="col-md-6">
          {{burger_name}}
        </div>
        <div class="col-md-4">
            {{> burgers/burger-block devour=false}}
        </div>
      </div>
      </li>

    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>